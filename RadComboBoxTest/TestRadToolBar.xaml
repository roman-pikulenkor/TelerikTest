<Page
    x:Class="RadComboBoxTest.TestRadToolBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Telerik.Windows.Controls"
    xmlns:local="clr-namespace:RadComboBoxTest">
    
    <Grid Margin="250">
        <controls:RadToolBar x:Name="toolbar" Grid.Row="1" CustomLayout="True" Height="50">
            <controls:RadButton Content="FILE" Click="FileButton_Click" />
            <controls:RadButton Content="EDIT" Click="EditButton_Click"/>
            <controls:RadButton Content="VIEW" Click="ViewButton_Click"/>
            <controls:RadButton Content="VIEW1" Click="View1Button_Click"/>
            <controls:RadButton Content="VIEW2" Click="View2Button_Click"/>
            <controls:RadButton Content="VIEW3" Click="View3Button_Click"/>
            <controls:RadButton Content="VIEW4" Click="View4Button_Click"/>
        </controls:RadToolBar>
    </Grid>
</Page>
